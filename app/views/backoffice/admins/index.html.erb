<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        Lista de Administradores
        <%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
            <i class="fa fa-plus"></i>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Cargo</th>
                        <th></th>
                    </tr>
                </thead>
                <% @admins.each do |admin| %>
                <tbody>
                    <tr>
                        <td style="width: 50px"><%= admin.id %></td>
                        <td><%= admin.name %></td>
                        <td><%= admin.email %></td>
                        <td><%= admin.role_br %></td>
                        <td style="width: 80px">
                            <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>
                            <% if current_admin.id != admin.id %>
                                <%= link_to backoffice_admin_path(admin), method: "delete", class: "btn btn-danger btn-circle",
                                    data: {confirm: "VocÃª deseja realmente excluir (<b>#{admin.email}</b>)?"} do %>
                                    <i class="fa fa-times"></i>
                                <% end %>
                            <% else %>
                                <%= link_to "#", disabled: "disabled",class: "btn btn-danger btn-circle" do %>
                                <i class="fa fa-times"></i>
                                <% end %>
                            <% end %>
                        </td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>